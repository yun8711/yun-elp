{
  "name": "yun-elp",
  "version": "0.0.1",
  "description": "基于 Element Plus 的业务组件库",
  "private": false,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bootstrap": "pnpm install",
    "create": "node scripts/create-component.js",
    "delete": "node scripts/delete-component.js",
    "dev": "pnpm -C play dev",
    "docs:dev": "pnpm -C docs dev",
    "build": "pnpm build:clean && pnpm build:style-vars && pnpm build:comp && pnpm build:style && pnpm build:resolver && pnpm build:pkg",
    "build:clean": "rimraf dist",
    "build:comp": "pnpm -C packages/components build",
    "build:style-vars": "tsx scripts/generate-style-vars.ts --module node16",
    "build:style": "pnpm -C packages/theme-chalk build",
    "build:resolver": "pnpm -C packages/resolver build",
    "build:pkg": "tsx scripts/build2.ts",
    "build:docs": "pnpm -C docs build",
    "build:web-types": "tsx scripts/generate-web-types.ts",
    "lint": "pnpm lint:format && pnpm lint:eslint && pnpm lint:style",
    "lint:format": "prettier --write .",
    "lint:eslint": "eslint . --fix",
    "lint:style": "stylelint \"**/*.{vue,scss,css}\" --fix",
    "commit": "czg",
    "release": "release-it",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build",
    "publish": "npm publish --registry=https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@yun-elp/components": "workspace:*",
    "@yun-elp/resolver": "workspace:*",
    "@yun-elp/theme-chalk": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.17.25",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/runtime-core": "^3.5.14",
    "cz-git": "^1.11.1",
    "czg": "^1.11.1",
    "element-plus": "^2.9.10",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-vue": "^10.0.0",
    "glob": "^11.0.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "release-it": "^17.11.0",
    "rimraf": "^5.0.5",
    "stylelint": "^16.16.0",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^5.4.15",
    "vue": "^3.5.14"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "vitepress-theme-demoblock",
      "vue-demi"
    ]
  }
}
